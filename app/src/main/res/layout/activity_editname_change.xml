<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1A1A"
    tools:context=".editnameChangeActivity">

    <LinearLayout
        android:id="@+id/settinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/Apptitel"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Schedule"
            android:background="@drawable/backkkk"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#F4EFEF"

            android:layout_marginStart="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_200sdp"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Info"
            android:background="@drawable/backkkk"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#F4EFEF"

            android:layout_marginStart="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_7sdp"/>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/edittextfields"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="center"
        android:background="@drawable/back"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/classtype"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"

            android:hint="Change As you need"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_14sdp"


            />

        <EditText
            android:id="@+id/building"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"

            android:hint="Change As you need"

            android:textColorHint="#ffffff"
            android:textSize="@dimen/_14sdp"


            />

        <EditText
            android:id="@+id/room"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"

            android:hint="Change As you need"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_14sdp"


            />

        <EditText
            android:id="@+id/teacher"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"

            android:hint="Change As you need"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_14sdp"


            />

        <TextView
            android:id="@+id/Submit"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"

            android:background="@drawable/backkkk"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"

            android:hint="Submit"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_14sdp"


            />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>